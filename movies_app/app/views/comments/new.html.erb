<div class="row comment-partial">
	<div class="col-sm-6 text-center">
		<%= form_for :comment, url: { action: 'create'}, html: {:id => "comment-form"} do |f| %>
			<p>
				<%= f.text_area :body, size: "80x5" %>
			</p>
			<p>
				<input class='btn btn-default' type='submit' value='Add Comment'>
			</p>
		<% end %>
	</div>
</div>

