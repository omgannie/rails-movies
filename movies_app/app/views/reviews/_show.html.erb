<div class="review">
  <div class="left reviewer">
    <h3>Trusted Reviewer</h3>
    <%= review.reviewer.username %> <%= image_tag 'trusted_sticker.png' %> <br>
    <%= review.created_at %>
  </div>

  <div class="right review-content">
    <div class="top-right">
      Average Rating: <%= review.average_rating %>
    </div>

    <h3>"<%= review.title %>"</h3>
    <p>
      <%= review.body %>
    </p>
  </div>

  <div class="review-options">
    <!-- Button to leave rating on review -->
  </div>
</div>

<% if review.comments.any? %>
<% end %>
