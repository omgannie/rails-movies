<div class="review">
  <div class="row">
    <div class="col-sm-3">
      <h3>Trusted Reviewer</h3>
      <p><span class="glyphicon glyphicon-star"><%= review.reviewer.username %></p>
      <br>
      <p><%= review.created_at %></p>
    </div>
    <div class="col-sm-9">
        <p>Average Rating: <%= review.average_rating %></p>

        <h3>"<%= review.title %>"</h3>
        <p>
          <%= review.body %>
        </p>
    </div>
  </div>

  <div class="add-comment">
    <div class="row">
      <% if logged_in? %>
        <div class="col-sm-3">
          <%= link_to "Add Comment", new_comment_path(review.id), :class => "btn btn-block btn-primary btn-lg get-comment-form" %>
        </div>
        <div class="col-sm-3">
          <%= link_to  "Rate This Review", new_review_rating_link_path(review.id), :class => "btn btn-block btn-info btn-lg" %>
        </div>
      <% else %>
        <div class="col-sm-3">
          <%= link_to "Login", new_login_path, :class => "btn btn-block btn-primary btn-lg" %>
        </div>
      <% end %>
      <div class="col-sm-3">
        <a href="#" class="toggle-comments btn btn-block btn-default btn-lg">Toggle Comments</a>
      </div>
    </div>
  </div>
</div>
